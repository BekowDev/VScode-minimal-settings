{
    // üîπ 1. –ò–Ω—Ç–µ—Ä—Ñ–µ–π—Å –∏ –û–∫–Ω–æ (–ú–∞–∫—Å–∏–º–∞–ª—å–Ω—ã–π —Ñ–æ–∫—É—Å)
    "window.commandCenter": false,
    "window.menuBarVisibility": "toggle", // –°–∫—Ä—ã–≤–∞–µ—Ç –≤–µ—Ä—Ö–Ω–µ–µ –º–µ–Ω—é (–Ω–∞–∂–º–∏—Ç–µ Alt –¥–ª—è –ø–æ–∫–∞–∑–∞)
    "window.zoomLevel": 0,
    "workbench.startupEditor": "none",
    "workbench.editor.showTabs": "none",
    "workbench.editor.empty.hint": "hidden", // –£–±–∏—Ä–∞–µ—Ç —Ç–µ–∫—Å—Ç-–ø–æ–¥—Å–∫–∞–∑–∫—É –Ω–∞ –ø—É—Å—Ç–æ–º —ç–∫—Ä–∞–Ω–µ
    "workbench.activityBar.location": "bottom",
    "workbench.statusBar.visible": false,
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "workbench.layoutControl.enabled": false,
    "workbench.tips.enabled": false,
    "breadcrumbs.enabled": false,
    "chat.commandCenter.enabled": false,

    // üîπ 2. –†–µ–¥–∞–∫—Ç–æ—Ä (–ß–∏—Å—Ç—ã–π —Ö–æ–ª—Å—Ç)
    "editor.fontFamily": "SF Mono",
    "editor.fontSize": 14,
    "editor.lineHeight": 1.6,
    "editor.fontLigatures": false,
    "editor.tabSize": 4,
    "editor.wordWrap": "on",

    "editor.minimap.enabled": false,
    "editor.lineNumbers": "off", // –û—Å—Ç–∞–≤–ª–µ–Ω–æ –≤—ã–∫–ª—é—á–µ–Ω–Ω—ã–º –ø–æ –≤–∞—à–µ–º—É –∂–µ–ª–∞–Ω–∏—é
    "editor.glyphMargin": false,
    "editor.showFoldingControls": "never",
    "editor.lightbulb.enabled": "off",
    "editor.inlayHints.enabled": "off", // –û—Ç–∫–ª—é—á–∞–µ—Ç –≤—Å—Ç—Ä–æ–µ–Ω–Ω—ã–µ –ø–æ–¥—Å–∫–∞–∑–∫–∏ —Ç–∏–ø–æ–≤/–ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤ (—É–±–∏—Ä–∞–µ—Ç –≤–∏–∑—É–∞–ª—å–Ω—ã–π —à—É–º)

    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.overviewRulerBorder": false,
    "editor.hideCursorInOverviewRuler": true, // –£–±–∏—Ä–∞–µ—Ç –æ—Ç–º–µ—Ç–∫—É –∫—É—Ä—Å–æ—Ä–∞ –≤ —Å–∫—Ä—ã—Ç–æ–º —Å–∫—Ä–æ–ª–ª–±–∞—Ä–µ

    "editor.renderWhitespace": "none",
    "editor.renderLineHighlight": "all",
    "editor.guides.indentation": false,
    "editor.stickyScroll.enabled": false, // –û—Ç–∫–ª—é—á–∞–µ—Ç "–ø—Ä–∏–ª–∏–ø–∞–Ω–∏–µ" —Ñ—É–Ω–∫—Ü–∏–π —Å–≤–µ—Ä—Ö—É —ç–∫—Ä–∞–Ω–∞

    // üîπ 3. –ö—É—Ä—Å–æ—Ä, –º—ã—à—å –∏ –∞–Ω–∏–º–∞—Ü–∏–∏
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "smooth",
    "editor.smoothScrolling": true,
    "editor.mouseWheelZoom": true,

    // üîπ 4. –°–∫–æ–±–∫–∏ (–ë–∞–ª–∞–Ω—Å —á–∏—Å—Ç–æ—Ç—ã –∏ —É–¥–æ–±—Å—Ç–≤–∞)
    "editor.matchBrackets": "always", // –ò–∑–º–µ–Ω–µ–Ω–æ —Å "never": –±–µ–∑ —ç—Ç–æ–≥–æ –æ—á–µ–Ω—å —Å–ª–æ–∂–Ω–æ –∏—Å–∫–∞—Ç—å –æ—à–∏–±–∫–∏ –≤–ª–æ–∂–µ–Ω–Ω–æ—Å—Ç–∏
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": false,
    "editor.guides.highlightActiveBracketPair": false,

    // üîπ 5. –ü—Ä–æ–≤–æ–¥–Ω–∏–∫ —Ñ–∞–π–ª–æ–≤ (–î–µ—Ä–µ–≤–æ)
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "workbench.tree.indent": 30,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.tree.enableStickyScroll": false,

    // üîπ 6. –§–∞–π–ª—ã –∏ –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.formatOnSave": true,
    "editor.detectIndentation": false,

    // üîπ 7. –¢–µ—Ä–º–∏–Ω–∞–ª
    "terminal.integrated.fontFamily": "SF Mono",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.lineHeight": 1,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorStyleInactive": "line",
    "terminal.integrated.stickyScroll.enabled": false,

    // üîπ 8. Git –∏ –†–∞—Å—à–∏—Ä–µ–Ω–∏—è
    "git.decorations.enabled": false,
    "scm.diffDecorations": "none",
    "extensions.ignoreRecommendations": true,

    // üîπ 9. Prettier –∏ Python
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.tabWidth": 4,
    "prettier.semi": false,
    "prettier.singleQuote": true,
    "python.defaultInterpreterPath": "/usr/bin/python3",

    // üîπ 10. –¢–µ–º—ã –∏ –ò–∫–æ–Ω–∫–∏
    "workbench.colorTheme": "Webstorm NewUI Theme",
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.activeIconPack": "nest",
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.folders.color": "#909090",

    // üîπ 11. –ö–∞—Å—Ç–æ–º–Ω—ã–µ —Ü–≤–µ—Ç–∞
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#ffffff33", // –°–º—è–≥—á–µ–Ω —Ü–≤–µ—Ç –Ω–∞–ø—Ä–∞–≤–ª—è—é—â–∏—Ö –ª–∏–Ω–∏–π
        "editor.lineHighlightBackground": "#ffffff0a", // –õ–µ–≥–∫–æ–µ –≤—ã–¥–µ–ª–µ–Ω–∏–µ —Ç–µ–∫—É—â–µ–π —Å—Ç—Ä–æ–∫–∏
    },
}
